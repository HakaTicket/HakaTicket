<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParameterActivity">

    <ImageView
        android:id="@+id/logoOmbre"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_with_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMenuConnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TitreMenuParametre"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily=""
        app:layout_constraintBottom_toBottomOf="@+id/rectangleDroit"
        app:layout_constraintEnd_toEndOf="@+id/rectangleDroit"
        app:layout_constraintStart_toEndOf="@+id/logoOmbre"
        app:layout_constraintTop_toTopOf="@+id/rectangleDroit"></TextView>

    <ImageView
        android:id="@+id/rectangleDroit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textpassword"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangledroit"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textusername" />

    <EditText
        android:id="@+id/textpassword2"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangledroit"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpassword" />

    <EditText
        android:id="@+id/textpassword3"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangledroit"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpassword2" />

    <TextView
        android:id="@+id/labelnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/labelnom"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textpassword"
        app:layout_constraintEnd_toStartOf="@+id/textpassword"
        app:layout_constraintTop_toTopOf="@+id/textpassword"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/labelpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="1dp"
        android:text="@string/labelpassword"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textpassword2"
        app:layout_constraintEnd_toStartOf="@+id/textpassword2"
        app:layout_constraintTop_toTopOf="@+id/textpassword2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelverification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/labelverification"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textpassword3"
        app:layout_constraintEnd_toStartOf="@+id/textpassword3"
        app:layout_constraintTop_toTopOf="@+id/textpassword3"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/textusername"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangledroit"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textusername2" />


    <EditText
        android:id="@+id/textusername2"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/rectangledroit"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleDroit" />

    <TextView
        android:id="@+id/labelprenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/labelprenom"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textusername"
        app:layout_constraintEnd_toStartOf="@+id/textusername"
        app:layout_constraintTop_toTopOf="@+id/textusername"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/labelsaisiemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:text="@string/labelsaisiemail"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textusername2"
        app:layout_constraintEnd_toStartOf="@+id/textusername2"
        app:layout_constraintTop_toTopOf="@+id/textusername2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/boutoninscrire"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rectanglearrondi"
        android:shadowColor="@color/black"
        android:text="@string/boutonDeconnexion"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>